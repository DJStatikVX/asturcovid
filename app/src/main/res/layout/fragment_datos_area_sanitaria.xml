<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".datos.DatosAreaSanitariaFragment">

    <LinearLayout
        android:id="@+id/id_datos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/id_confirmados_icono_area_sanitaria"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:contentDescription="@string/app_name"
                tools:src="@drawable/contagios_icono" />

            <TextView
                android:id="@+id/id_confirmados_texto_area_sanitaria"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:gravity="left"
                android:text="@string/numero_contagios"
                android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/id_pruebas_icono_area_sanitaria"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:contentDescription="@string/app_name"
                tools:src="@drawable/icono_pruebas" />

            <TextView
                android:id="@+id/id_pruebas_texto_area_sanitaria"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:gravity="left"
                android:text="@string/numero_contagios"
                android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/id_fallecidos_icono_area_sanitaria"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:contentDescription="@string/app_name"
                tools:src="@drawable/fallecidos_icono" />

            <TextView
                android:id="@+id/id_fallecidos_texto_area_sanitaria"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:gravity="left"
                android:text="@string/numero_contagios"
                android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                android:textSize="18sp" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>